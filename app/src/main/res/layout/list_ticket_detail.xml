<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c6c6eb"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/list_ticket_txt_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ID: 834857 "
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/list_ticket_txt_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="02:30 AM"
                    android:gravity="center"
                    android:layout_weight="0.85"
                    android:layout_marginLeft="10dp"
                    android:textColor="#737373"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_ticket_txt_btype"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b_type"
                    android:textColor="#737373"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_ticket_txt_seat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Seat No:\t"
                    android:layout_weight=".85"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_ticket_txt_seat_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:layout_weight=".25"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/list_ticket_txt_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="Jothi Prabhakaran"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_ticket_txt_sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Female"
                    android:layout_gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/list_ticket_txt_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:layout_gravity="center"
                    android:text="Age: 23"
                    android:textColor="#737373"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/list_ticket_txt_famt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="F_amt : 180"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/list_ticket_txt_samt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="S_amt: 55"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#737373"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_ticket_txt_amt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="T_amt : 1024"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/cpb_red"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>